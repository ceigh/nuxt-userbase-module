{
  "name": "nuxt-userbase",
  "version": "0.1.0",
  "description": "Userbase plugin for Nuxt",
  "author": "Artjom LÃ¶bsack <ceigh@pm.me> (http://ceigh.github.io)",
  "keywords": [
    "userbase",
    "nuxt",
    "nuxt.js"
  ],
  "main": "lib/module.js",
  "license": "MIT",
  "scripts": {
    "dev": "nuxt test/fixture",
    "test": "NODE_ENV=test jest",
    "build": "tsc",
    "watch": "tsc --watch",
    "test:unit": "NODE_ENV=test jest --testRegex \"/test/unit/(.+)\\.test\\.js$\"",
    "test:system": "NODE_ENV=test jest --testRegex \"/test/system/(.+)\\.test\\.js$\"",
    "test:coverage": "NODE_ENV=test yarn test --coverage",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,ts,json,vue}'"
  },
  "dependencies": {
    "consola": "^2.12.1"
  },
  "devDependencies": {
    "@types/consola": "^2.2.5",
    "@types/jest": "^25.2.3",
    "@types/jsdom": "^16.2.3",
    "@types/node": "^14.0.4",
    "jest": "^26.0.1",
    "nuxt": "^2.12.2",
    "prettier": "^2.0.5",
    "puppeteer": "^3.1.0",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.{js,jsx}"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
